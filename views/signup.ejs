<% include partials/header3 %>
    <div class='text-center text-white scred'>
      <h1 class="font-weight-bold">Register</h1>
    </div>
    <form class="needs-validation m-5" action="/signup" method="POST" novalidate>
      <div class="form-row justify-content-center">
        <div class="col-sm-6 mb-3">
          <input type="text" class="form-control" name="username" id="validationCustom01" minlength="3" placeholder="Username" required>
          <div class="invalid-feedback">
            Min 3 characters!
          </div>
        </div>
      </div>
      <div class="form-row justify-content-center">
        <div class="col-sm-6 mb-3">
          <input type="email" class="form-control" name="email" id="validationCustom04" placeholder="email" required>
          <div class="invalid-feedback">
            Please provide a valid email.
          </div>
        </div>
      </div>
      <div class="form-row justify-content-center">
        <div class="col-sm-6 mb-3">
          <input type="password" class="form-control" name="password" id="validationCustom03" minlength="3" placeholder="password" required>
          <div class="invalid-feedback">
            Please provide a valid password.
          </div>
        </div>
      </div>
      <div class="form-row justify-content-center text-right  ">
        <div class="col-sm-6 mb-3">
          <button class="btn btn-success btn-block btn-lg" type="submit">Submit form</button>
        </div> 
      </div> 
    </form>
<% include partials/footer2 %>